---
// src/layouts/SlideSite.astro
import BaseLayout from './BaseLayout.astro';

export interface SlideSiteLayoutProps {
    title: string;
    description: string;
    ogImage: string;
    ogUrl: string;
}

const { title, description, ogImage, ogUrl } = Astro.props;
---

<BaseLayout {title} {description} {ogImage} {ogUrl}>
    <slot name="header" slot="header" />
    <slot name="subheader" slot="subheader" />
    <slot name="slideshow" slot="slideshow" />
    <slot />
    <slot name="footer" slot="footer" />
</BaseLayout>