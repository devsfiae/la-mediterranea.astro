---
// src/pages/index.astro
import Wrapper from '../components/WrapperSlideSite.astro';
import Slideshow from '../components/Slideshow.astro';
---

<Wrapper
    charset="UTF-8"
    title="Welcome to La Mediterranea"
    description="Experience Mediterranean vibes at our beach restaurant on Formentera"
    ogImage="/images/website_background.jpg"
    ogUrl="/"
    viewport="width=device-width, initial-scale=1.0"
>
    <p slot="after-header">This is a paragraph that will appear after the header.</p>
    
    <!-- Slideshow with 'home' type for the homepage -->
    <Slideshow slot="main" type="home" />
    
    <h1>Welcome to La Mediterranea</h1>
    
    <p slot="before-footer">Copyright 2024</p>
</Wrapper>
