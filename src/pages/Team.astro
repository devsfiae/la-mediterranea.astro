---
import { getCollection } from 'astro:content';
import Wrapper from '../components/WrapperSlideSite.astro';
import TeamCategoryDropdown from '../components/TeamCategoryDropown.astro';
import Card from '../components/Card.astro';
import '../styles/global.css';
import '../styles/card.css';

const teamMembers = await getCollection('persons');
---

<Wrapper 
    title="Team - La Mediterranea"
    description="Meet the dedicated team behind La Mediterranea."
    ogImage="/images/persons/bartender.png"
    ogUrl="/team.html"
    noFooter={true} 
>
    <TeamCategoryDropdown slot="after-header" />
    
    <div slot="main" class="card-container scrollable-content">
        {teamMembers.map((member) => (
            <Card
                itemId={member.id}
                itemName={member.data.name}
                imagePath={member.data.image}
                description={member.data.description}
                price=""
                volume=""
                text1={member.data.position}
                text2=""
            />
        ))}
    </div>
</Wrapper>
