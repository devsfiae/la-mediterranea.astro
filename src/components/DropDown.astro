---
// DropDown.astro
export interface DropDownProps {
    options: Array<{ label: string, value: string }>,
    selectedValue: string,
    onChange: (value: string) => void
}

const { options, selectedValue, onChange } = Astro.props as DropDownProps;
---

<div class="dropdown-container">
  <label class="dropdown-label" for="dropdown"></label>
  <select
    id="dropdown"
    class="dropdown-select"
    value={selectedValue}
    on:change={(event: Event) => onChange((event.target as HTMLSelectElement).value)}
  >
    <option disabled selected>Select an option</option>
    {options.map((option) => (
      <option value={option.value} selected={selectedValue === option.value}>
        {option.label}
      </option>
    ))}
  </select>
</div>

<style>
  @import "./styles/DropDown.css";
</style>