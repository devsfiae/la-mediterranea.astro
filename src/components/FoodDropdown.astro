---
// src/components/FoodDropdown.astro

function updateSubcategory(event: Event) {
    const target = event.target as HTMLSelectElement | null;
    if (target) {
        const subcategory = target.value;
        const url = new URL(window.location.href);
        url.searchParams.set('subcategory', subcategory);
        window.location.href = url.toString();
    }
}
---

<div class="subheader">
    <label for="foodDropdown">Choose a subcategory:</label>
    <select id="foodDropdown" class="dropdown" on:change={updateSubcategory}>
        <option value="all">All</option>
        <option value="7">Beef</option>
        <option value="8">Seafood</option>
        <option value="9">Vegetarian</option>
        <option value="10">Desserts</option>
    </select>
</div>